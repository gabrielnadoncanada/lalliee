{% extends '@Wcm/Layout/layout.html.twig' %}


{% block main %}

    {% set modules = {
        1: {
            title: 'Services',
            length: services.getAll(app.request)|length
        },
        2: {
            title: 'Chiens',
            length: chiens.getAll(app.request)|length
        },
        3: {
            title: 'Partenaires',
            length: partenaires.getAll(app.request)|length
        },
        4: {
            title: 'FAQs',
            length: faqs.getAll(app.request)|length
        },
        5: {
            title: 'Equipe',
            length: equipes.getAll(app.request)|length
        }
    } %}
    <div class="container-fluid">
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Tableau de bord</h1>
        </div>
        <div class="row dashboard">

            {% for module in modules %}
                <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    {{ module.title}}
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    {{ module.length }}
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
