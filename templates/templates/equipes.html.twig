{% extends 'Layout/layout.html.twig' %}

{% block main %}
    {% set items = {
        1: {
            'title': 'Ã‰quipe',
            'url': '/equipe'
        }
    }
    %}
    {% include 'blocks/breadcrumbs.html.twig' with items %}
    <section class="section section-xl bg-default">
        <div class="container">
            <div class="row row-30">
                {% for equipe in equipes.getAll(app.request) %}
                    <div class="col-sm-6 col-lg-4">
                        <article class="post post-classic box-md"><a class="post-classic-figure"
                                                                     href="/equipe/{{ equipe.url }}"><img
                                        src="{{ equipe.image ? '/uploads/files/' ~ equipe.image  : '/build/images/equipe-placeholder.png' }}" alt="" width="370" height="276"></a>
                            <div class="post-classic-content">
                                <h5 class="post-classic-title"><a href="/equipe/{{ equipe.url }}">{{ equipe.title }}</a>
                                </h5>
                            </div>
                        </article>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

{% endblock %}




